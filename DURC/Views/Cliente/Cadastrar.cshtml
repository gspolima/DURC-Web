@model DURC.Models.CadastroClienteViewModel

@{
    ViewData["Title"] = "Cadastrar";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2>Cadastrar Cliente</h2>

<form asp-controller="Cliente" asp-action="Cadastrar" method="post">
    <p class="alert alert-info">Campos marcados com <span class="text-danger">*</span> são obrigatórios</p>

    <div class="form-group">
        <label asp-for="Nome">Nome <span class="text-danger">*</span></label>
        <input asp-for="Nome" type="text" class="form-control" placeholder="José da Silva">
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CPF">CPF <span class="text-danger">*</span></label>
        <input asp-for="CPF" type="number" class="form-control">
        <small class="form-text text-muted">Somente números</small>
        <span asp-validation-for="CPF" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Celular">Celular <span class="text-danger">*</span></label>
        <input asp-for="Celular" type="number" class="form-control" placeholder="85987320165">
        <small class="form-text text-muted">Somente números</small>
        <span asp-validation-for="Celular" class="text-danger"></span>
    </div>
    <hr />

    <h4>Endereço</h4>
    <div class="form-group">
        <label asp-for="Logradouro">Logradouro <span class="text-danger">*</span></label>
        <input asp-for="Logradouro" type="text" class="form-control" placeholder="Rua das Rosas">
        <span asp-validation-for="Logradouro" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Numero">Número <span class="text-danger">*</span></label>
        <input asp-for="Numero" type="number" class="form-control" placeholder="420">
        <span asp-validation-for="Numero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bairro">Bairro <span class="text-danger">*</span></label>
        <input asp-for="Bairro" type="text" class="form-control" placeholder="Jardim Tropical">
        <span asp-validation-for="Bairro" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cidade">Cidade <span class="text-danger">*</span></label>
        <input asp-for="Cidade" type="text" class="form-control" placeholder="Maranguape">
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado">Estado <span class="text-danger">*</span></label>
        <input asp-for="Estado" type="text" class="form-control" placeholder="Ceará">
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Cadastrar</button>
    <a asp-controller="Cliente" asp-action="Listar" type="button" class="btn btn-danger">Cancelar</a>
</form>